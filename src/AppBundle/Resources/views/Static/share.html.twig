{% macro social(url) %}
    <div class="share" >
        <ul>
            <li>
                <a href="http://www.facebook.com/sharer.php?u={{ url }}" target="_blank" >
                    <img src="{{ asset('bundles/app/images/icon/share-facebook.png')}}" title="Compartir en Facebook" alt="Compartir en Facebook">
                </a>
            </li>
            <li>
                <a href="https://plus.google.com/share?url={{ url }}" target="_blank" >
                    <img src="{{ asset('bundles/app/images/icon/share-google.png')}}" title="Compartir en google" alt="Compartir en google">
                </a>
            </li>
            <li>
                <a href="https://twitter.com/share" target="_blank" >
                    <img src="{{ asset('bundles/app/images/icon/share-twitter.png')}}" title="Twittear" alt="Twittear">
                </a>

            </li>
            <li>
                <script async defer src="//assets.pinterest.com/js/pinit.js"></script>
                <a href="https://www.pinterest.com/pin/create/button/" data-pin-do="buttonBookmark" data-pin-custom="true" >
                    <img src="{{ asset('bundles/app/images/icon/share-pinterest.png')}}" title="Pinéalo" alt="Pinéalo">
                </a>
            </li>
        </ul>
    </div>
{% endmacro %}